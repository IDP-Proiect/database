// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator auth {
  provider = "prisma-client-js"
  output = "../../auth-service/node_modules/.prisma/client"
}
generator order {
  provider = "prisma-client-js"
  output = "../../order-service/node_modules/.prisma/client"
}
generator product {
  provider = "prisma-client-js"
  output = "../../product-service/node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id       String  @id @unique @default(cuid())
  username String  @unique
  password String
  email    String  @unique
  role     String?
  orders   Order[]
}

model Order {
  id         Int        @id @default(autoincrement())
  timestamp  DateTime      @default(now())
  user       User          @relation(fields: [userId], references: [id])
  userId     String
  status     String
  orderedColors OrderedColor[]
}

model Color {
  id          String       @id @unique @default(cuid())
  description String
  hexCode     String       @unique
  price       Int
  pictureUrl  String?
  quantity Int
  orderedColors OrderedColor[]
}

model OrderedColor {
  orderedColorsId Int @id @default(autoincrement())
  colorID         String
  quantity        Int
  orderId         Int
  order           Order @relation(fields: [orderId], references: [id])
  color           Color @relation(fields: [colorID], references: [id])
}

model Todo {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  title String
  description String?
  completed Boolean @default(false)
}